{
  "compilerOptions": {
    "skipLibCheck": false,
    "target": "ES6",
    "module": "CommonJS",
    "lib": [
      "esnext",
      "dom"
    ],
    "declaration": false,
    "sourceMap": false,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "paths": {
      "tasker": [
        "./tasker"
      ],
      "declarations": [
        "./src/declarations/declarations.ts"
      ],
      "locals": [
        "./tasker/types"
      ]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
